//program 6.5 = find the factorial of a given number by fact()-pass and return
#include <stdio.h>
int fact(int a) {
	int f = 1; // f to store factorial
	a++;
	while(a--) {
		if (a > 0)
			f = f * a;
	}
	return f;
}
int main(void) {
	int a;
	scanf("%d",&a);
	printf("factorial of %d",fact(a));
	return 0;
}



